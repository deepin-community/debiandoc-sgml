## -*- perl -*-
## ----------------------------------------------------------------------
## Locale/ro_RO.UTF-8/Text: locale for Romanian output in plain text format
## ----------------------------------------------------------------------

## ----------------------------------------------------------------------
%locale = (
	   'abstract' => 'Abstract',
	   'copyright notice' => 'Notă copyright',
	   'contents' => 'Sumar',
	   'chapter' => sub { return "Capitolul $_[0]" },
	   'appendix' => sub { return "Anexa $_[0]" },
	   'section' => sub { return "Secţiunea $_[0]" },
	   'subsection' => sub { return "Secţiunea $_[0]" },
	   'subsubsection' => sub { return "Secţiunea $_[0]" },
	   'paragraph' => sub { return "Paragraful $_[0]" },
	   'subparagraph' => sub { return "Paragraful $_[0]" },
	   );

## ----------------------------------------------------------------------
