## -*- perl -*-
## ----------------------------------------------------------------------
## Locale/zh_TW.UTF-8/Texinfo: locale for Chinese (Big5) output in Texinfo format
## ----------------------------------------------------------------------

## ----------------------------------------------------------------------
%locale = (
	   'detailed' => '詳細列表',
	   'chapter' => sub { return "第 $_[0] 章" },
	   'appendix' => sub { return "附錄 $_[0]" },
	   'section' => sub { return "第 $_[0] 節" },
	   'subsection' => sub { return "第 $_[0] 節" },
	   'subsubsection' => sub { return "第 $_[0] 節" },
	   'paragraph' => sub { return "第 $_[0] 節" },
	   'subparagraph' => sub { return "第 $_[0] 節" },
	   );

## ----------------------------------------------------------------------
